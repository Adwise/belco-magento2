<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="icons" type="host">data:</value>
                <value id="attachments" type="host">https://belco-prod.s3-eu-central-1.amazonaws.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="widget" type="host">https://cdn.belco.io</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="websocket" type="host">wss://chat.belco.io</value>
                <value id="i18n" type="host">https://cdn.belco.io</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="googleapis" type="host">https://*.googleapis.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="gstatic" type="host">https://*.gstatic.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>